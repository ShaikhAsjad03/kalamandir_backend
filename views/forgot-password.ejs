<table
  width="100%"
  border="0"
  align="center"
  cellpadding="7"
  cellspacing="0"
  bgcolor="#f7f7f7"
  style="font-family: Arial, sans-serif; font-size: 14px; margin: 0 auto"
>
  <tr>
    <td style="padding: 20px">
      <table
        align="center"
        border="0"
        cellpadding="15"
        cellspacing="0"
        width="500"
        style="background-color: #ffffff; border-radius: 8px; overflow: hidden; box-shadow: 0 0 8px rgba(0, 0, 0, 0.1)"
      >
        <!-- Header -->
        <tr style="background-color: #050505;">
          <td
            valign="top"
            style="
              padding: 20px;
              font-size: 22px;
              color: #ffffff;
              font-weight: bold;
              text-align: center;
              letter-spacing: 1px;
            "
          >
            Kalamandir Jewellers
          </td>
        </tr>

        <!-- Body -->
        <tr>
          <td style="padding: 20px; color: #050505;">
            <h3 style="color: #7d5724; margin-top: 0;">Dear <%= fullName %>,</h3>
            <p style="margin: 12px 0;">
              You requested to reset your password. Please use the verification code below:
            </p>
            <div
              style="
                background-color: #7d5724;
                color: #ffffff;
                font-size: 24px;
                font-weight: bold;
                text-align: center;
                padding: 12px;
                border-radius: 6px;
                margin: 20px 0;
                letter-spacing: 3px;
              "
            >
              <%= otpCode %>
            </div>
            <p style="margin: 12px 0;">
              If you did not request this, please ignore this email.  
              Your account is safe.
            </p>
          </td>
        </tr>

        <!-- Footer -->
        <tr>
          <td
            style="
              background-color: #f2f2f2;
              text-align: center;
              padding: 15px;
              font-size: 12px;
              color: #7d5724;
            "
          >
            &copy; <%= new Date().getFullYear() %> Kalamandir Jewellers.  
            All rights reserved.
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
